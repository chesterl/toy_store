<div class="col-md-10 col-md-offset-1 col-xs-12">
<%= form_tag toys_path, method: :get, class: "form-horizontal" do  %>
  <div class="form-group col-md-9 col-xs-12">
    <%= text_field_tag :search_terms, @search_keywords, size: 50, placeholder: "e.g. Star Wars Toys", class: "form-control search-bar" %>
  </div>
  <div class="form-group col-md-3 col-xs-12">
    <%= submit_tag "Search", class: "btn btn-block btn-primary btn-search" %>
  </div>
<% end %>
</div>
